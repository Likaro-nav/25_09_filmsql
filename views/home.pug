html
  head
    title= title 
    link(rel="stylesheet", href="/home.css")
    link(rel="shortcut icon", href="./IMG/studio-ghibli.svg", type="image/x-icon")
  body
    nav(id= "navegacion")
        ul(class="navegacion-items")
          li
            a(href="/") INICIO
          li
            a(href="/films/form/create") GUARDA TUS PELÍCULAS FAVORITAS
    header(id= "cabecera")
      img(src="./IMG/studio-ghibli.svg", alt="imagen de studio ghibli")
      h1(class="cabeceraIntro")=message
    div(id = "buscador") 
            <input class="search-text" type="text" name="search" placeholder="¿Qué películas quieres guardar?" id="inputTitulos">
            input(type="button", value="Busque aquí sus títulos favoritos" id="tomarValor")
    div
      h2(class="infoTitulo") Tus peliculas favoritas
    div(id = "informacion")
      each film, index in datos
        section(class="lista_cartas")
          article(class="cartas")
            header(class="cabecera_cartas")
            span(id="posicion")=film.ID
            p(class="dataName") Titulo: 
              span=film.Titulo
            p(class="dataYear") Año de la película: 
              span=film.Epoca
            p(class="dataGenre") Género de la película: 
              span=film.Genero
            p(class="dataDirector") Director: 
              span=film.Director
            img(class="dataPoster" id="poster" src=film.Poster)
        
            input(type="button" id=`borrar${index}` class="botonRojo" value=" Borrar " onclick=`borrarBBDD("${film.ID}")`)
            input(type="button" id=`editar${index}` class="botonNaranja" value=" Editar ", onclick=`editarBBDD("${film.Titulo}")`)
            input(type="button"  id=`detalle${index}` class="botonAmarilloClaro" value="Detalles", onclick =`detalleBBDD("${film.Titulo}")`)
  footer
    header
      div(id="final")
        p Design and code made by 
          a(href="#") Lina Katherine Larrea Rodríguez
  script(src="/script_home.js") 
    